<apex:page controller="AddLineItemVFController" showHeader="true" sidebar="true">
    <apex:form >
	 <apex:pageBlock title="Add Line Item" mode="edit">
            <apex:pageBlockButtons >
                <apex:commandButton action="{!addLineItem}" value="Add Line Item"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection title="Add Line Item" columns="1">
                <apex:inputField value="{!lineItem.Name}"/>
                <apex:inputField value="{!lineItem.Amount__c}"/>
                <apex:inputField value="{!lineItem.Description__c}"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
        </apex:form>
</apex:page>